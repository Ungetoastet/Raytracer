<scene>
    <objects>
        <!-- size="4" ist kurz für scale="4,4,4" -->
        <!-- Einfache Kugel -->
        <Sphere size="4" position="0,0,0" material="shinyRed" />

        <!-- Würfel neben der Kugel -->
        <Cube size="3" position="6,0,0" material="matteBlue" />

        <!-- Eine flache Bodenplatte -->
        <Plane size="20" position="0,-5,0" rotation="90,0,0" material="matteGray" />

        <!--linke Wand-->
        <Plane size="20" position="-10,0,0" rotation="0,90,0" material="matteGray" />

        <!--rechte Wand-->
        <Plane size="20" position="10,0,0" rotation="0,-90,0" material="matteGray" />

        <!--Wand hinten-->
        <Plane size="20" position="0,0,-10" rotation="0,0,0" material="matteGray" />
    </objects>

    <camera>
        <!-- Kamera mit Blick auf den Ursprung -->
        <position x="10" y="10" z="20" />
        <lookAt x="0" y="0" z="0" />
        <fieldOfView value="45" />
    </camera>

    <materials>
        <!-- Material für eine glänzende rote Kugel -->
        <material id="shinyRed">
            <diffuse color="1,0,0" />
            <specular color="1,1,1" intensity="0.8" diffuse="50" />
        </material>

        <!-- Material für eine matte blaue Oberfläche -->
        <material id="matteBlue">
            <diffuse color="0,0,1" />
            <specular color="0,0,0" />
        </material>

        <!-- Material für eine graue matte Bodenfläche -->
        <material id="matteGray">
            <diffuse color="0.8,0.8,0.8" />
            <specular color="0.2,0.2,0.2" intensity="0.2" diffuse="10" />
        </material>
    </materials>
</scene>
